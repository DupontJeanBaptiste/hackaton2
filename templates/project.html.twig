{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projets :</H1>

<div class="all-projects">
    {% for project in projects %}
    <div class="accordion accordion-flush" id="accordionFlushProject{{ project.id }}">
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-heading{{ project.id }}">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{ project.id }}" aria-expanded="false" aria-controls="flush-collapse{{ project.id }}">
                Projet : {{ project.name }}
            </button>
            </h2>
            <div id="flush-collapse{{ project.id }}" class="accordion-collapse collapse" aria-labelledby="flush-heading{{ project.id }}" data-bs-parent="#accordionFlushProject{{ project.id }}">
                <div class="accordion-body">
                    <div class="project-description">
                        <p>Description du projet :{{ project.description }}</p>
                        <br>
                        <p>Client :{{ project.client }}</p>
                        <br>
                        <p>Product-owner :{{ project.po }}</p>
                        <br>
                        <p>Dates de début du projet : {{ project.creationdate|date('d-m-Y') }}</p>
                        <p>Dates de fin du projet : {{ project.enddate|date('d-m-Y') }}</p>
                    </div>
                    <div class="all-sprints" id="all-sprints">
                            <div class="sprint-button" id="sprint-button">
                                {% for sprint in project.sprints.snapshot %}
                                    <p>
                                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSprint{{ sprint.id }}" aria-expanded="false" aria-controls="collapseSprint{{ sprint.id }}">
                                            Sprint {{ sprint.number }}
                                        </button>
                                    </p>
                                {% endfor %}
                            </div>
                            {% for sprint in project.sprints.snapshot %}
                                <div class="collapse" id="collapseSprint{{ sprint.id }}">
                                    <div class="card card-body">
                                        <div class="sprint-description">
                                            <p>Description : {{ sprint.description }}</p>
                                            <br>
                                            <p>Dates de début du sprint : {{ sprint.creationdate|date('d-m-Y') }}</p>
                                            <p>Dates de fin du sprint : {{ sprint.enddate|date('d-m-Y') }}</p>
                                        </div>
                                        <div class="all-taches">
                                            <div class="tache-button">
                                                {% for tache in sprint.taches.snapshot %}
                                                    {% if tache.status == 'Terminé' %}
                                                    {% elseif tache.status == 'En attente' %}
                                                        <p>
                                                            <button class="btn btn-success" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTache{{ tache.id }}" aria-expanded="false" aria-controls="collapseTache{{ tache.id }}">
                                                                {{ tache.name }}
                                                            </button>
                                                        </p>
                                                    {% elseif tache.status == 'En cours' %}
                                                        <p>
                                                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTache{{ tache.id }}" aria-expanded="false" aria-controls="collapseTache{{ tache.id }}">
                                                                {{ tache.name }}
                                                            </button>
                                                        </p>
                                                    {% elseif tache.status == 'En révision' %}
                                                        <p>
                                                            <button class="btn btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTache{{ tache.id }}" aria-expanded="false" aria-controls="collapseTache{{ tache.id }}">
                                                                {{ tache.name }}
                                                            </button>
                                                        </p>
                                                    {% endif %}
                                                {% endfor %}
                                            </div>
                                                {% for tache in sprint.taches.snapshot %}
                                                {% if tache.status == 'Terminé' %}
                                                {% elseif tache.status in ['En cours', 'En attente', 'En révision'] %}
                                                    <div class="collapse" id="collapseTache{{ tache.id }}">
                                                        <div class="card card-body">
                                                            <p>Description : {{ tache.description }}</p>
                                                            <br>
                                                            <p>Status : {{ tache.status }}</p>
                                                            <br>
                                                            <p>Description : {{ tache.description }}</p>
                                                            <br>Nombre de devs maximum : {{ tache.numberrequire }}
                                                            <p>Labels : {{ tache.label }}</p>
                                                            <br>
                                                            {% if tache.freeacess == true %}
                                                            <button type="button" class="btn btn-outline-success">
                                                                S'ajouter 
                                                                <i class="bi bi-plus-circle">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                                                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                                                    </svg>
                                                                </i>
                                                            </button>
                                                            {% elseif tache.freeacess == false %}
                                                            <button type="button" class="btn btn-outline-warning">
                                                                Envoyer la demande 
                                                                <i class="bi bi-envelope">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                                                        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
                                                                    </svg>
                                                                </i>
                                                            </button>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}