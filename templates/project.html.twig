{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projets :</H1>

<div class="accordion accordion-flush" id="accordionFlushExample">
    <div class="accordion-item">
        <h2 class="accordion-header" id="flush-headingOne">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
            Projet 1
        </button>
        </h2>
        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
            <div class="accordion-body">
                <div class="project-description">
                <p>Description du projet.</p>
                </div>
                    <div class="sprint-button">
                        <p>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSprint1" aria-expanded="false" aria-controls="collapseSprint1">
                                Sprint 1
                            </button>
                        </p>
                        <div class="collapse" id="collapseSprint1">
                            <div class="card card-body">
                                <div class="sprint-description">
                                    <p>Description du sprint.</p>
                                </div>
                                <div class="tache-button">
                                    <p>
                                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTache1" aria-expanded="false" aria-controls="collapseTache1">
                                            Tache 1
                                        </button>
                                    </p>
                                    <div class="collapse" id="collapseTache1">
                                        <div class="card card-body">
                                            <p>Description de la tache.</p>
                                            <button type="button" class="btn btn-outline-success">
                                                <p>S'ajout</p>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}